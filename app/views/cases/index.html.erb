<h1>Cases</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Primary issue</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @cases.each do |case| %>
      <tr>
        <td><%= case.id %></td>
        <td><%= link_to case.primary_issue, case_path(case) %></td>
        <td><%= case.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_case_path(case), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', case_path(case), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_case_path, :class => 'btn btn-primary' %>
